<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:iPark.Views"
            x:Class="iPark.Views.MainPage">
    <TabbedPage.Children>
        <NavigationPage Title="Reservations">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="ic_reservation.png"/>
                </OnPlatform>
            </NavigationPage.Icon>
            <x:Arguments>
                <views:MyReservations />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Parking">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="ic_parking.png"/>
                </OnPlatform>
            </NavigationPage.Icon>
            <x:Arguments>
                <views:ParkingList />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>
